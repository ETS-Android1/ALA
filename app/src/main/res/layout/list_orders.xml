<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true"
    android:backgroundTint="@color/primary"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:radius="5dp"
        android:background="@drawable/background_list_view"
        >
        <TextView
            android:id="@+id/txt_number_order_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:text="Číslo objednávky:" />




        <TextView
            android:id="@+id/txt_customer_title"
            android:layout_below="@+id/txt_number_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:text="Zákazník:" />




        <TextView
            android:id="@+id/txt_date_title"
            android:layout_below="@id/txt_customer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:text="Datum objednání:" />


        <TextView
            android:id="@+id/txt_status_title"
            android:layout_below="@id/txt_date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:text="Stav objednávky:" />



        <TextView
            android:id="@+id/txt_number_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="10dp"
            android:text="TextView"
            android:textColor="@color/primary" />


        <TextView
            android:id="@+id/txt_customer"
            android:layout_width="wrap_content"
            android:layout_below="@+id/txt_number_order"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="10dp"
            android:text="TextView"
            android:textColor="@color/primary" />


        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_below="@+id/txt_customer"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="10dp"
            android:text="TextView"
            android:textColor="@color/primary" />


        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_date"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/img_status_bar"
            android:layout_toRightOf="@+id/img_status_bar"
            android:src="@drawable/status_bar_ip"
            android:text="TextView"
            android:textColor="@color/primary" />

        <ImageView
            android:id="@+id/img_status_bar"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_below="@id/txt_date"
            android:layout_marginTop="4dp"
            android:layout_marginStart="120dp"
            android:src="@drawable/status_bar_ip" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>